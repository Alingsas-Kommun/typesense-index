{
  "name": "alingsas-kommun/typesense-index",
  "description": "Index Wordpress and Municipio site content to Typesense.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Alingsas Kommun",
      "email": "it@alingsas.se"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "TypesenseIndex\\": "source/php/"
    }
  },
  "version": "1.0.1",
  "require": {
    "php": ">=8.1",
    "ext-dom": "*",
    "ext-libxml": "*",
    "typesense/typesense-php": "^5.0",
    "php-http/guzzle7-adapter": "^1.1"
  },
  "scripts": {
    "typesenseServer": [
      "Composer\\Config::disableProcessTimeout",
      "docker-compose up"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false
    }
  }
}
